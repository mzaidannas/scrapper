<div class="bg-gray-100 min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center">Sign up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <input
          type="text"
          class="block border border-gray-200 w-full p-3 rounded mb-4"
          name="fullname"
          placeholder="Full Name" />

        <input
          type="text"
          class="block border border-gray-200 w-full p-3 rounded mb-4"
          name="email"
          placeholder="Email"
          autocomplete="email" />

        <input
          type="password"
          class="block border border-gray-200 w-full p-3 rounded mb-4"
          name="password"
          placeholder="Password"
          autocomplete="new-password" />
        <input
          type="password"
          class="block border border-gray-200 w-full p-3 rounded mb-4"
          name="password_confirmation"
          placeholder="Confirm Password"
          autocomplete="new-password" />

        <button
          type="submit"
          class="w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-600 focus:outline-none my-1"
        >Create Account</button>

        <div class="text-center text-sm text-gray-500 mt-4">
          By signing up, you agree to the
          <a class="no-underline border-b border-gray-500 text-gray-dark" href="#">
              Terms of Service
          </a> and
          <a class="no-underline border-b border-gray-500 text-gray-dark" href="#">
              Privacy Policy
          </a>
        </div>
      <% end %>
    </div>

    <div class="text-gray-dark mt-6">
      Already have an account?
      <a class="no-underline border-b border-blue-500 text-blue-500" href="/users/sign_in">
        Log in
      </a>.
    </div>
  </div>
</div>
